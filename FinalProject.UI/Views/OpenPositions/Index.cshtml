@model IEnumerable<FinalProject.DATA.EF.OpenPosition>

@{
    ViewBag.Title = "Index";
}

<h2>Open Positions</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Location.StoreNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position.Title)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Location.StoreNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position.Title)
                </td>
                <td>
                    @Html.ActionLink("Apply Now", "OneClickApply", new { id = item.OpenPositionID })
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Edit", "Edit", "OpenPositions", new { id = item.OpenPositionID }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Details", "Details", "OpenPositions", new { id = item.OpenPositionID }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Delete", "Delete", "OpenPositions", new { id = item.OpenPositionID }, new { @class = "btn btn-warning" })
                    }
                </td>
                <td></td>
            </tr>
        }
    </tbody>

</table>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
