@model IEnumerable<FinalProject.DATA.EF.ApplicationStatus>

@{
    ViewBag.Title = "Index";
}

<h2>Application Status</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StatusName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StatusDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StatusName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StatusDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", null, new { id=item.ApplicationStatusID, @class = "btn btn-success" }) |
            @Html.ActionLink("Details", "Details", null, new { id=item.ApplicationStatusID, @class = "btn btn-info" }) |
            @Html.ActionLink("Delete", "Delete", null, new { id=item.ApplicationStatusID, @class = "btn btn-warning" })
        </td>
    </tr>
}

</table>
